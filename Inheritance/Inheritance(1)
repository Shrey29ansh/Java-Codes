import java.util.*;
import java.util.Scanner; 


class Player
{
    Scanner name = new Scanner(System.in);
    String userName = name.nextLine();
}
class Hockey extends Player
{
    void trueh()
    {
         System.out.println(super.userName +" plays hockey\n");
    }
}
class Cricket extends Player
{   
    void trueh()
    {
         System.out.println(super.userName +" plays Cricket\n");
    }
}
class Football extends Player
{
    void trueh()
    {
        System.out.println(super.userName +" plays Football\n");
    }
}
class Main1
{
    public static void main(String args[])
    {
        Hockey p1 = new Hockey();
        p1.trueh();
        Cricket p2 = new Cricket();
        p2.trueh();
        Football p3 = new Football();
        p3.trueh();
      
    }
}

















